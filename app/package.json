{
  "name": "capture2calendar-web",
  "private": true,
  "version": "1.3.3",
  "type": "module",
  "scripts": {
    "build": "tsc -b && npx tailwindcss -i ./src/index.css -o ./src/all.css && vite build && node ./src/cs.js",
    "dev": "vite --host && npx tailwindcss -i ./src/index.css -o ./src/all.css --watch",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "npm run  prettier \".\" --write \"**/*.{ts,tsx,md}\"",
    "update-dependencies": "npm run ncu -u",
    "screenshots": "cd ../tools/screenshots && npm run screenshots:all",
    "screenshots:en": "cd ../tools/screenshots && npm run screenshots:en",
    "screenshots:de": "cd ../tools/screenshots && npm run screenshots:de"
  },
  "dependencies": {
    "@capacitor-community/in-app-review": "^7.1.0",
    "@capacitor-firebase/crashlytics": "^7.4.0",
    "@capacitor/android": "^7.0.0",
    "@capacitor/app": "^7.0.0",
    "@capacitor/camera": "^7.0.1",
    "@capacitor/core": "^7.0.0",
    "@capacitor/filesystem": "^7.0.1",
    "@capacitor/haptics": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@capacitor/screen-orientation": "^7.0.2",
    "@capacitor/share": "^7.0.1",
    "@ebarooni/capacitor-calendar": "^7.2.0",
    "@michaelwolz/camera-preview-lite": "7.1.0",
    "@revenuecat/purchases-capacitor": "^11.2.12",
    "capacitor-native-settings": "^7.0.1",
    "dexie": "4.0.11",
    "dexie-react-hooks": "1.1.7",
    "firebase": "^12.6.0",
    "i18next": "24.2.2",
    "i18next-browser-languagedetector": "8.0.2",
    "lucide-react": "^0.554.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hot-toast": "2.5.1",
    "react-i18next": "15.4.0",
    "react-modal-sheet": "4.0.1",
    "react-router-dom": "7.9.4",
    "react-spinners": "0.15.0",
    "react-zoom-pan-pinch": "^3.7.0"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.0.0",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@typescript-eslint/eslint-plugin": "8.22.0",
    "@typescript-eslint/parser": "8.22.0",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "axios": "1.12.2",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.18",
    "globals": "15.14.0",
    "localforage": "1.10.0",
    "postcss": "8.5.1",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwind-merge": "3.0.1",
    "tailwindcss": "3.4.17",
    "tailwindcss-safe-area": "0.8.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.22.0",
